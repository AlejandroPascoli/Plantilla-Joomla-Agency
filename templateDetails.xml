<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="3.4" type="template" client="site" method="upgrade">
	
	<name>Joomla Agency</name><!-- name the template -->
	<creationDate>2016-Marzo</creationDate><!-- the date your are beginn to code -->
	<author>Alejandro Pascoli</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© 2016 Zonasitio.com</copyright><!-- for who you are coding -->
	<authorEmail>info@zonasitio.com</authorEmail><!-- your email address -->
	<authorUrl>http://www.zonasitio.com</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>Joomla Agency for Joomla</h1>
		<p>Created by <a href="http://www.zonasitio.com" target="_blank">Alejandro Pascoli | zonasitio.com</a>.</p>
		<p>Based on <a href="http://startbootstrap.com/template-overviews/agency/" target="_blank">Start Bootstrap | startbootstrap.com/template-overviews/agency/</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions><!-- posiciones de modulos -->
		<position>top</position>
		<position>navbar</position>
		<position>user1</position>
		<position>user2</position>
		<position>user3</position>
		<position>user4</position>
		<position>breadcrumbs</position>
		<position>slide</position>
		<position>slogan</position>
		<position>sidebar</position>
		<position>bottom1</position>
		<position>bottom2</position>
		<position>bottom3</position>
		<position>bottom4</position>
		<position>footer2</position>
		<position>debug</position>
	</positions>
<config>
		<fields name="params">
					
	<fieldset  name="logo" type="upload_func" label="Logo">
					<field name="logo_file" type="media" label="Select your logo:"></field>
					<field name="logo_link" type="text" label="Logo link:"  description="Example: http://www.zonasitio.com" default="index.php"></field>
					<field name="logo_width" type="text" label="Logo width:" description="Example: 295" default="295"></field>
					<field name="logo_height" type="text" label="Logo height:" description="Example: 58" default="58"></field>
			</fieldset>
			</fields>
</config>
</extension>
